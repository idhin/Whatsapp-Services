# ===========================================
# WhatsApp Services Configuration
# ===========================================

# Server Port
PORT=3000

# API Security Key (set this in production!)
# API_KEY=your_secure_api_key_here

# ===========================================
# Webhook Configuration
# ===========================================

# Base URL for webhook callbacks
BASE_WEBHOOK_URL=http://localhost:3000/localCallbackExample

# Per-session webhook (optional)
# Format: {SESSIONID}_WEBHOOK_URL
# Example: MYSESSION_WEBHOOK_URL=https://your-server.com/webhook

# ===========================================
# Feature Flags
# ===========================================

# Enable local callback example (for testing)
ENABLE_LOCAL_CALLBACK_EXAMPLE=TRUE

# Enable Swagger API documentation endpoint
ENABLE_SWAGGER_ENDPOINT=TRUE

# Auto-mark messages as read
# SET_MESSAGES_AS_SEEN=FALSE

# ===========================================
# Callback Settings
# ===========================================

# Disable specific callbacks (comma-separated)
# Options: message, qr, authenticated, ready, disconnected, message_ack
# DISABLED_CALLBACKS=message_ack

# ===========================================
# Rate Limiting
# ===========================================

# Rate limit requests per minute
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=60000
